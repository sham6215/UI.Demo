<UserControl x:Class="Styles.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Styles.Controls"
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Name="MainPanel">
            <Label
                Name="Label1"
                Content="{Binding Label1Text, Mode=OneWay}"/>
            <Button Name="Button1">Button</Button>
            <TextBox Name="Textbox1">TextBox</TextBox>
            <GroupBox Header="Group Box">
                <StackPanel>
                    <Label>Label1</Label>
                    <Label>Label2</Label>
                    <Label>Label3</Label>
                    <Label>Label4</Label>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</UserControl>
